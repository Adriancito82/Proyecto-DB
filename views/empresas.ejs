<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>Lista de Usuarios</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <h1>Lista de Empresas</h1>

    <a href="/crear_empresa">
        <button style="margin-bottom: 20px;">Crear Nueva Empresa</button>
    </a>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% companies.forEach(function(company) { %>
                <tr>
                    <td>
                        <%= company.company_id %>
                    </td>
                    <td>
                        <%= company.name %>
                    </td>
                    <td>
                        <form action="/delete_empresa/<%= company.company_id %>" method="POST" style="display:inline;">
                            <button type="submit" style="background-color: #f44336;">Borrar</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <br>
    <a href="/">Volver a la lista</a>
</body>

</html>
